local TweenService = game:GetService("TweenService")
local CoreGui = game:GetService("CoreGui")
local Players = game:GetService("Players")
local Player = Players.LocalPlayer

-- üìã Copy to clipboard
if setclipboard then
    setclipboard([[
üìå Owners: IDK HUB (mvp_kfc)
üîó Discord: https://discord.gg/RGQKDMkUQn
üîó YouTube: https://www.youtube.com/@IDK_Hub
]])
else
    warn("‚ùå setclipboard() is not available in this environment.")
end

-- üßπ Destroy existing GUI
if CoreGui:FindFirstChild("OwnerCreditGUI") then
    CoreGui:FindFirstChild("OwnerCreditGUI"):Destroy()
end

-- üì¶ GUI Container
local gui = Instance.new("ScreenGui")
gui.Name = "OwnerCreditGUI"
gui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
gui.IgnoreGuiInset = true
gui.ResetOnSpawn = false
gui.Parent = CoreGui

-- üåê Main Frame
local frame = Instance.new("Frame")
frame.AnchorPoint = Vector2.new(0.5, 0.5)
frame.Position = UDim2.new(0.5, 0, 0.4, 0)
frame.BackgroundTransparency = 1
frame.Size = UDim2.new(0, 500, 0, 140)
frame.Parent = gui

-- üß± Layout
local layout = Instance.new("UIListLayout")
layout.FillDirection = Enum.FillDirection.Vertical
layout.VerticalAlignment = Enum.VerticalAlignment.Center
layout.HorizontalAlignment = Enum.HorizontalAlignment.Center
layout.Padding = UDim.new(0, 10)
layout.Parent = frame

-- üß∞ Create Label Function
local function createLabel(text, emoji)
    local label = Instance.new("TextLabel")
    label.Size = UDim2.new(1, -40, 0, 52)
    label.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
    label.TextColor3 = Color3.fromRGB(255, 255, 255)
    label.Text = text
    label.TextSize = 18
    label.Font = Enum.Font.GothamSemibold
    label.TextWrapped = true
    label.BackgroundTransparency = 1
    label.TextTransparency = 1
    label.ZIndex = 10
    label.ClipsDescendants = true
    label.Parent = frame

    -- Corner
    Instance.new("UICorner", label).CornerRadius = UDim.new(0, 10)

    -- Stroke
    local stroke = Instance.new("UIStroke", label)
    stroke.Color = Color3.fromRGB(255, 255, 255)
    stroke.Thickness = 1.5
    stroke.Transparency = 1
    stroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border

    -- Shadow
    local shadow = Instance.new("TextLabel")
    shadow.Size = label.Size
    shadow.Position = label.Position + UDim2.new(0, 2, 0, 2)
    shadow.BackgroundTransparency = 1
    shadow.TextTransparency = 1
    shadow.Text = label.Text
    shadow.TextSize = label.TextSize
    shadow.TextColor3 = Color3.fromRGB(0, 0, 0)
    shadow.Font = label.Font
    shadow.TextWrapped = true
    shadow.ZIndex = 9
    shadow.ClipsDescendants = true
    shadow.Parent = label

    return label, stroke, shadow
end

-- üìù Labels
local creditLabel, stroke1, shadow1 = createLabel("üìã Owner credit copied to clipboard!")
local noticeLabel, stroke2, shadow2 = createLabel("‚ö†Ô∏è Script made by IDK Hub (mvp_kfc) ‚Äî NOT KIBAZHUB or tuankietlac12345 (YQANTG)")

-- ‚ñ∂Ô∏è Fade In Function
local function fadeIn(label, stroke, shadow)
    TweenService:Create(label, TweenInfo.new(0.4), {
        BackgroundTransparency = 0.3,
        TextTransparency = 0
    }):Play()
    TweenService:Create(stroke, TweenInfo.new(0.4), {
        Transparency = 0.25
    }):Play()
    TweenService:Create(shadow, TweenInfo.new(0.4), {
        TextTransparency = 0.5
    }):Play()
end

-- ‚èπ Fade Out Function
local function fadeOut(label, stroke, shadow)
    TweenService:Create(label, TweenInfo.new(0.5), {
        BackgroundTransparency = 1,
        TextTransparency = 1
    }):Play()
    TweenService:Create(stroke, TweenInfo.new(0.5), {
        Transparency = 1
    }):Play()
    TweenService:Create(shadow, TweenInfo.new(0.5), {
        TextTransparency = 1
    }):Play()
end

-- üîî Play fade in
fadeIn(creditLabel, stroke1, shadow1)
fadeIn(noticeLabel, stroke2, shadow2)

-- üîï Delay before fade out
task.wait(3.8)

-- üîÑ Fade out
fadeOut(creditLabel, stroke1, shadow1)
fadeOut(noticeLabel, stroke2, shadow2)

-- üßº Final clean
task.wait(0.7)
gui:Destroy()
