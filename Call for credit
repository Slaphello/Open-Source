local TweenService = game:GetService("TweenService")
local CoreGui = game:GetService("CoreGui")
local Players = game:GetService("Players")
local Player = Players.LocalPlayer

if setclipboard then
    setclipboard(
        [[
üìå Owners: IDK HUB (mvp_kfc)
üîó Discord: https://discord.gg/RGQKDMkUQn
üîó YouTube: https://www.youtube.com/@IDK_Hub
]]
    )
else
    warn("‚ùå setclipboard() is not available in this environment.")
end

if CoreGui:FindFirstChild("OwnerCreditGUI") then
    CoreGui:FindFirstChild("OwnerCreditGUI"):Destroy()
end

local gui = Instance.new("ScreenGui")
gui.Name = "OwnerCreditGUI"
gui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
gui.IgnoreGuiInset = true
gui.ResetOnSpawn = false
gui.Parent = CoreGui

local frame = Instance.new("Frame")
frame.Name = "MainFrame"
frame.AnchorPoint = Vector2.new(0.5, 0.5)
frame.Position = UDim2.new(0.5, 0, 0.4, 0)
frame.BackgroundTransparency = 1
frame.Size = UDim2.new(0, 520, 0, 0)
frame.AutomaticSize = Enum.AutomaticSize.Y
frame.Parent = gui

local layout = Instance.new("UIListLayout")
layout.FillDirection = Enum.FillDirection.Vertical
layout.VerticalAlignment = Enum.VerticalAlignment.Center
layout.HorizontalAlignment = Enum.HorizontalAlignment.Center
layout.Padding = UDim.new(0, 8)
layout.SortOrder = Enum.SortOrder.LayoutOrder
layout.Parent = frame

local function createLabel(text)
    local label = Instance.new("TextLabel")
    label.AutomaticSize = Enum.AutomaticSize.Y
    label.Size = UDim2.new(1, -40, 0, 0)
    label.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
    label.TextColor3 = Color3.fromRGB(255, 255, 255)
    label.Text = text
    label.TextSize = 18
    label.Font = Enum.Font.GothamSemibold
    label.TextWrapped = true
    label.BackgroundTransparency = 1
    label.TextTransparency = 1
    label.ClipsDescendants = true
    label.ZIndex = 10
    label.Parent = frame

    Instance.new("UICorner", label).CornerRadius = UDim.new(0, 10)

    local stroke = Instance.new("UIStroke", label)
    stroke.Color = Color3.fromRGB(255, 255, 255)
    stroke.Thickness = 1.5
    stroke.Transparency = 1
    stroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border

    return label, stroke
end

local creditLabel, stroke1 = createLabel("üìã Owner credit copied to clipboard!")
local noticeLabel, stroke2 =
    createLabel("‚ö†Ô∏è Script made by IDK Hub (mvp_kfc) ‚Äî NOT KIBAZHUB or tuankietlac12345 (YQANTG)")

local function fadeIn(label, stroke)
    TweenService:Create(
        label,
        TweenInfo.new(0.4),
        {
            BackgroundTransparency = 0.3,
            TextTransparency = 0
        }
    ):Play()
    TweenService:Create(
        stroke,
        TweenInfo.new(0.4),
        {
            Transparency = 0.25
        }
    ):Play()
end

fadeIn(creditLabel, stroke1)
fadeIn(noticeLabel, stroke2)

task.wait(3.5)

local function fadeOut(label, stroke)
    TweenService:Create(
        label,
        TweenInfo.new(0.5),
        {
            BackgroundTransparency = 1,
            TextTransparency = 1
        }
    ):Play()
    TweenService:Create(
        stroke,
        TweenInfo.new(0.5),
        {
            Transparency = 1
        }
    ):Play()
end

fadeOut(creditLabel, stroke1)
fadeOut(noticeLabel, stroke2)

task.wait(0.6)
gui:Destroy()
