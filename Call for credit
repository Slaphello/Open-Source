local TweenService = game:GetService("TweenService")
local CoreGui = game:GetService("CoreGui")
local Players = game:GetService("Players")
local Player = Players.LocalPlayer

if setclipboard then
    setclipboard([[
üìå Owners:
üîó Discord: https://discord.gg/RGQKDMkUQn

üì∫ BTW, Script made by this guy (Discord):
üîó YouTube: https://www.youtube.com/@IDK_Hub
]])
else
    warn("‚ùå setclipboard() is not available in this environment.")
end

if CoreGui:FindFirstChild("OwnerCreditGUI") then
    CoreGui:FindFirstChild("OwnerCreditGUI"):Destroy()
end

local gui = Instance.new("ScreenGui")
gui.Name = "OwnerCreditGUI"
gui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
gui.IgnoreGuiInset = true
gui.ResetOnSpawn = false
gui.Parent = CoreGui

local label = Instance.new("TextLabel")
label.Name = "CreditLabel"
label.AnchorPoint = Vector2.new(0.5, 0.5)
label.Position = UDim2.new(0.5, 0, 0.4, 0)
label.Size = UDim2.new(0, 420, 0, 60)
label.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
label.TextColor3 = Color3.fromRGB(255, 255, 255)
label.Text = "Credit of owner on your clipboard now"
label.TextSize = 20
label.TextWrapped = true
label.Font = Enum.Font.GothamBold
label.BackgroundTransparency = 1
label.TextTransparency = 1
label.ZIndex = math.huge
label.ClipsDescendants = true
label.Parent = gui

Instance.new("UICorner", label).CornerRadius = UDim.new(0, 12)

local stroke = Instance.new("UIStroke")
stroke.Color = Color3.fromRGB(255, 255, 255)
stroke.Thickness = 1.5
stroke.Transparency = 1
stroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border
stroke.Parent = label

local scale = Instance.new("UIScale")
scale.Scale = 1
scale.Parent = label

local fadeIn = TweenService:Create(label, TweenInfo.new(0.4), {
    TextTransparency = 0,
    BackgroundTransparency = 0.5
})
local strokeIn = TweenService:Create(stroke, TweenInfo.new(0.4), {
    Transparency = 0.25
})

fadeIn:Play()
strokeIn:Play()

task.wait(2.1)

local fadeOut = TweenService:Create(label, TweenInfo.new(0.5), {
    TextTransparency = 1,
    BackgroundTransparency = 1
})
local strokeOut = TweenService:Create(stroke, TweenInfo.new(0.5), {
    Transparency = 1
})

fadeOut:Play()
strokeOut:Play()

fadeOut.Completed:Wait()
gui:Destroy()
